<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autoxwatchdog">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AlertDetails"
            android:label="Alert Details"
            android:parentActivityName=".Alerts">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Alerts" />
        </activity>

        <activity
            android:name=".Alerts"
            android:label="Alerts"
            android:parentActivityName=".MainMenu">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>

        <activity
            android:name=".CommandControls"
            android:label="Command Controls"
            android:parentActivityName=".MainMenu">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu"/>
        </activity>

        <activity
            android:name=".MainMenu"
            android:label="Main Menu"
            android:parentActivityName=".MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>