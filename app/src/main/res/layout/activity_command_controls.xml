<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommandControls">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Send Commands"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_front"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="Capture Front"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="handleCommand"
        app:layout_constraintBottom_toTopOf="@+id/get_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/get_rear"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="250dp"
        android:text="Capture Rear"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="handleCommand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_right" />

    <Button
        android:id="@+id/get_right"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Capture Right"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="handleCommand"
        app:layout_constraintBottom_toTopOf="@+id/get_rear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_left" />

    <Button
        android:id="@+id/get_left"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Capture Left"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="handleCommand"
        app:layout_constraintBottom_toTopOf="@+id/get_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_front" />
</android.support.constraint.ConstraintLayout>